mixin form_consent(model)
  form(action="#{virtualDirectory}/consentForms/#{model.id}/consents/new", method="post")
    legend
      span Enter your consent below
    div.row
      div.col-md-12
        ul
          li
            p Please indicate if you'd like to give your consent
            br
            label(class="", for="consentGiven_yes")
              input(id="consentGiven_yes", name="consentGiven", type="radio", value="1")
              | Yes
            label(class="", for="consentGiven_no")
              input(id="consentGiven_no", name="consentGiven", type="radio", value="0")
              | No
          li
            label(for="name") Name
            br
            input(id="name", name="name", type="text")
          li
            label(for="telephone") Telephone
            br
            input(id="telephone", name="telephone", type="text")
          li
            label(for="email") Email
            br
            input(id="email", name="email", type="text")
          li
            input(id="submit", name="submit", type="submit", value="Submit")

