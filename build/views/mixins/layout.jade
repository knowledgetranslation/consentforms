mixin header(title)
  header
    div.row
      div.col-md-12
        h1!= title
        block

mixin topnav(user)
  if locals.user
    nav.top.row
      .col-xs-4
        ul
          li
            a(href="#{virtualDirectory}/dashboard") Dashboard
      .col-xs-8
        .loginStatus
          ul
            li Hey, #{user.firstname}
            li
              a(href="#{virtualDirectory}/logout") Logout
